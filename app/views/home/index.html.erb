<div>
    <h1 class="text-2xl font-bold mb-6">Your Apps</h1>
    <% if user_signed_in? %>
    <%= form_with url: destroy_user_session_path, method: :delete do %>
        <%= submit_tag "Logout" %>
    <% end %>
    <% end %>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
    <% @user_apps.each do |app| %>
        <div
        class="p-4 rounded-lg shadow text-white"
        style="background-color: <%= app.color %>"
        data-id="<%= app.id %>"
        >
        <h2 class="text-lg font-semibold"><%= app.name %></h2>
        <p class="text-sm mb-2"><%= app.description %></p>
        <div class="flex space-x-2">
            <%= link_to "Open", app.link, target: "_blank", class: "bg-white text-black px-2 py-1 rounded text-sm" %>
            <%= button_to "Remove", remove_apps_path(id: app.id), method: :delete, class: "bg-black px-2 py-1 text-white text-sm rounded" %>
        </div>
        </div>
    <% end %>
    </div>

    <%= link_to "Add App", available_apps_path, class: "mt-6 inline-block bg-blue-600 text-white px-4 py-2 rounded" %>
</div>
